@using BioEngine.Core.Data.Entities.Blocks
<FormItem Label="Ссылка">
    <Input @bind-Value="@Block.Data.YoutubeLink"/>
</FormItem>
@if (!string.IsNullOrEmpty(Block.Data.YoutubeId))
{
    <div style="text-align: center">
        <iframe frameborder="0"
                allowfullscreen=""
                width="560" height="315"
                src="@Block.Data.EmbedUrl">
        </iframe>
    </div>
}

@code
{
    [Parameter]
    public YoutubeBlock Block { get; set; }
}
