@page "/Sites"
@inherits BaseListPage
<Toolbelt.Blazor.HeadElement.Title>@PageTitle</Toolbelt.Blazor.HeadElement.Title>
<PageContainer Title="@Title">
    <Breadcrumb>
        <Breadcrumb>
            <BreadcrumbItem>
                <a href="/">BRCGames</a>
            </BreadcrumbItem>
            <BreadcrumbItem>@Title</BreadcrumbItem>
        </Breadcrumb>
    </Breadcrumb>
    <Extra>
        <Button Type="@ButtonType.Primary" OnClick="ToFormPage">
            Добавить
        </Button>
    </Extra>
    <ChildContent>
        <AntRepositoryList TItem="BioEngine.Core.Data.Entities.Site" TEntityPk="Guid">
            <Column Title="Название" @bind-Field="@context.Title" Sortable DefaultSortOrder="SortDirection.Ascending">
                @{
                    var url = $"/Sites/{context.Id}";
                }
                <a href="@url">@context.Title</a>
            </Column>
            <Column Title="Адрес" @bind-Field="@context.Url" Sortable>
                <a href="@context.Url" target="_blank">@context.Url</a>
            </Column>

            <ActionColumn>
                <Space>
                    <SpaceItem>
                        <Button Danger>
                            <i class="fas fa-trash" title="Удалить"></i>
                        </Button>
                    </SpaceItem>
                </Space>
            </ActionColumn>
        </AntRepositoryList>
    </ChildContent>
</PageContainer>

@code {

    protected override string CreatePageUrl => "/Sites/Add";

    protected override string Title => "Сайты";

}
